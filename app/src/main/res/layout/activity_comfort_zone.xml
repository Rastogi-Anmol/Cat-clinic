<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.LoginActivity"
    android:background="@drawable/judgement_day_background"
    android:fillViewport="true">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:clipToPadding="false"
        android:clipChildren="false">

        <!-- background for the back button -->
        <TextView
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_margin="12dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:background="@xml/custom_back_btn"
            android:backgroundTint="@color/pastelPeach"
            />


        <!-- Back Button -->
        <ImageView
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="23dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/back_btn_cat"
            android:id="@+id/backBtn_ComfortZone"
            />


        <!-- "The Thought" heading -->
        <ImageView
            android:id="@+id/ivComfortable"
            android:layout_width="194dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="14dp"
            android:layout_below="@id/backBtn_ComfortZone"
            android:layout_marginTop="40dp"
            android:src="@drawable/judgement_day_the_thought" />


        <!-- "Cat" Image -->
        <ImageView
            android:id="@+id/cat1"
            android:layout_width="177dp"
            android:layout_height="231dp"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/tasksComfortable"
            android:layout_marginEnd="-70dp"
            android:layout_marginBottom="-104dp"
            android:src="@drawable/judgement_day_cat_1" />

        <!-- EditText for "The Thought" -->
        <EditText
            android:id="@+id/tasksComfortable"
            android:hint="comfortable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="100dp"
            android:background="@xml/custom_edit_text"
            android:padding="8dp"
            android:textColor="@color/black"
            android:drawablePadding="8dp"
            android:layout_below="@id/ivComfortable"
            android:layout_alignParentStart="true"
            android:layout_marginTop="-2dp" />

        <!-- "Cat" Image -->
        <ImageView
            android:id="@+id/cat2"
            android:layout_width="203dp"
            android:layout_height="258dp"
            android:layout_below="@+id/tasksComfortable"
            android:layout_marginStart="-50dp"
            android:layout_marginTop="-25dp"
            android:src="@drawable/judgement_day_cat_2" />

        <!-- "The Defense" heading -->
        <ImageView
            android:id="@+id/ivDoable"
            android:layout_width="197dp"
            android:layout_height="65dp"
            android:src="@drawable/judgement_day_the_defense"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="24dp"
            android:layout_below="@id/tasksComfortable"
            android:layout_marginTop="120dp" />

        <!-- EditText for Doable Tasks" -->
        <EditText
            android:id="@+id/tasksDoable"
            android:hint="doable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="24dp"
            android:background="@xml/custom_edit_text"
            android:padding="8dp"
            android:textColor="@color/black"
            android:drawablePadding="8dp"
            android:layout_below="@id/ivDoable"
            android:layout_alignParentEnd="true" />

        <!-- "Cat" Image -->
        <ImageView
            android:id="@+id/cat3"
            android:layout_width="203dp"
            android:layout_height="258dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tasksDoable"
            android:layout_marginTop="-25dp"
            android:layout_marginEnd="-50dp"
            android:src="@drawable/judgement_day_cat_4" />

        <!-- "The Goal" heading -->
        <ImageView
            android:id="@+id/ivGoal"
            android:layout_width="236dp"
            android:layout_height="65dp"
            android:src="@drawable/judgement_day_the_prosecution"
            android:layout_alignParentStart="true"
            android:layout_marginStart="14dp"
            android:layout_below="@id/tasksDoable"
            android:layout_marginTop="120dp" />

        <!-- EditText for "The Goal" -->
        <EditText
            android:id="@+id/tasksGoal"
            android:hint="goal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="100dp"
            android:layout_marginStart="24dp"
            android:background="@xml/custom_edit_text"
            android:padding="8dp"
            android:textColor="@color/black"
            android:drawablePadding="8dp"
            android:layout_below="@id/ivGoal"
            android:layout_alignParentStart="true"
            android:layout_marginTop="-10dp" />


        <!-- Submit button -->
        <Button
            android:id="@+id/ComfortZoneButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="24dp"
            android:text="@string/submit"
            android:textSize="18sp"
            android:backgroundTint="@color/pastel_coral"
            app:cornerRadius="20dp"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

</ScrollView>
