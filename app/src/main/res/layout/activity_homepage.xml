<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/background1">


    <!-- your 2Ã—2 grid of buttons -->
    <GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="2"
        android:useDefaultMargins="true">

        <!-- Emergency -->
        <ImageButton
            android:id="@+id/btnEmergency"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:src="@drawable/home_emergency"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent" />

        <!-- Exercises -->
        <ImageButton
            android:id="@+id/btnExercises"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:src="@drawable/home_exercises"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent" />

        <!-- History -->
        <ImageButton
            android:id="@+id/btnHistory"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:src="@drawable/home_history"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent" />

        <!-- Progress -->
        <ImageButton
            android:id="@+id/btnProgress"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:src="@drawable/home_progress"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent" />

    </GridLayout>

    <!-- centred logo on top of the grid -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@null"
        android:src="@drawable/logo" />

</FrameLayout>
