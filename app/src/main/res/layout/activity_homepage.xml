<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pastelBackground">

    <!-- Emergency -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardEmergency"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/pastelPink"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cardExercises"
        app:layout_constraintBottom_toTopOf="@+id/cardHistory"
        app:layout_constraintWidth_percent="0.48"
        app:layout_constraintHeight_percent="0.48">

        <ImageButton
            android:id="@+id/btnEmergency"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_siren"
            android:contentDescription="@string/emergency"
            android:scaleType="centerInside"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- Exercises -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardExercises"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/pastelLilac"
        app:layout_constraintStart_toEndOf="@id/cardEmergency"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cardProgress"
        app:layout_constraintWidth_percent="0.48"
        app:layout_constraintHeight_percent="0.48">

        <ImageButton
            android:id="@+id/btnExercises"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_stretching"
            android:contentDescription="@string/exercises"
            android:scaleType="centerInside"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- My History -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardHistory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/pastelLilac"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardEmergency"
        app:layout_constraintEnd_toStartOf="@+id/cardProgress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.48"
        app:layout_constraintHeight_percent="0.48">

        <ImageButton
            android:id="@+id/btnHistory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_book_open"
            android:contentDescription="@string/my_history"
            android:scaleType="centerInside"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- Progress -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardProgress"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/pastelPink"
        app:layout_constraintStart_toEndOf="@id/cardHistory"
        app:layout_constraintTop_toBottomOf="@id/cardExercises"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.48"
        app:layout_constraintHeight_percent="0.48">

        <ImageButton
            android:id="@+id/btnProgress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_progress_chart"
            android:contentDescription="@string/progress"
            android:scaleType="centerInside"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
